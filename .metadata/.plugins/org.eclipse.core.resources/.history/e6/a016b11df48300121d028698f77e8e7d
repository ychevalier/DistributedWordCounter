package Model;

import java.util.HashMap;
import java.util.Map;

public class WordList extends SyncMap {
	
	private Map<String, Integer> mWordCount;
	
	public WordList() {
		mWordCount = new HashMap<String, Integer>();
	}
	
	public synchronized void addWord(String word, int number) {
		if (mWordCount.containsKey(word)) {
			mWordCount.put(word, mWordCount.get(word) + number);
		} else {
			mWordCount.put(word, number);
		}
	}

}
