package Network;

import java.io.BufferedReader;
import java.io.DataOutputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.lang.ref.WeakReference;
import java.net.Socket;
import java.util.HashMap;
import java.util.Map;

import Exceptions.InvalidQueryException;
import Model.Query;

public class QueryHandler implements Runnable {
	
	private WeakReference<Socket> mSocket;
	
	public QueryHandler(Socket client) throws IOException {
		mSocket = new WeakReference<Socket>(client);
	}

	@Override
	public void run() {
		
		if(mSocket == null
				|| mSocket.get() == null) {
			return;
		}	
			
		String clientQuery;
		HashMap<String, String> aMap = new HashMap<String, String>();
		boolean isSuccess = true;

		try {
			BufferedReader mInput = new BufferedReader(
					new InputStreamReader(mSocket.get().getInputStream()));
			DataOutputStream mOutput = new DataOutputStream(mSocket.get()
					.getOutputStream());
			clientQuery = mInput.readLine();

			if (clientQuery != null
					&& clientQuery.equals(Protocol.CLIENT_SEND_FILE)) {

				// TODO Stop Infinite Loop with Max Arguments...
				for (int i = 0; i < Protocol.CLIENT_MAX_ARG_NUMBER; i++) {
					clientQuery = mInput.readLine();
					if (clientQuery != null && !clientQuery.isEmpty()) {
						String[] line = clientQuery.split("\\"
								+ Protocol.COMMON_SEPARATOR);
						
						// If it doesn't fit the protocol.
						if (line.length != 2) {
							isSuccess = false;
							break;
						}
						
						// Otherwise Get the arguments.
						aMap.put(line[0], line[1]);
					} else {
						// Finish! Let's start to read the file. see below.
						break;
					}
				}
			} else {
				isSuccess = false;
			}

			if (isSuccess) {

				// TODO Read the file!!
				
				Query q;
				try {
					q = new Query(aMap);
				} catch(InvalidQueryException e) {
					isSuccess = false;
				}

				for (Map.Entry<String, String> e : aMap.entrySet()) {
					System.out.println(e.getKey() + " --> " + e.getValue());
				}

				mOutput.writeBytes(Protocol.MASTER_OK
						+ Protocol.COMMON_END_LINE);
			}
			
			if(!isSuccess) {
				mOutput.writeBytes(Protocol.MASTER_KO
						+ Protocol.COMMON_END_LINE);
			}
			// Closing and quitting this client.
			mOutput.flush();
			mOutput.close();
			mInput.close();
			
			mSocket.get().close();
		} catch (IOException e) {
			isSuccess = false;
		}
	}

}
