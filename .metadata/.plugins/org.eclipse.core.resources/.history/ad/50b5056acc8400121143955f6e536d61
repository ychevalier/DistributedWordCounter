package Executers;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Map;
import java.util.Scanner;
import java.util.TreeMap;

import Model.WordList;
import Network.Protocols.ProtocolQuery;
import Network.Protocols.ProtocolResultFM;
import Network.Protocols.ProtocolResultFS;
import System.Utils;

public class WordCounter {

	
	public static void countToWordList(String inputFile, WordList list) throws IOException {
		
		System.out.println("Starting Processing...");
		
		BufferedReader br = null;
		
		try {
			String sCurrentLine;
			br = new BufferedReader(new FileReader(inputFile));
			while ((sCurrentLine = br.readLine()) != null) {
				String[] line = sCurrentLine.split("\\"
						+ ProtocolResultFM.WORD_COUNT_SEPARATOR);
				list.addWord(line[0], new Integer(line[1]).intValue());
			}
 
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				if (br != null)br.close();
			} catch (IOException ex) {
				ex.printStackTrace();
			}
		}
		System.out.println("Finished Processing");
	}

}
