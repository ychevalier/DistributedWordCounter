package Model;

import java.util.HashMap;
import java.util.Map;

public abstract class SyncMap {
	
	private Map<String, Integer> mMap;
	
	public SyncMap() {
		mMap = new HashMap<String, Integer>();
	}
	
	public synchronized void addWord(String word, int number) {
		if (mWordCount.containsKey(word)) {
			mWordCount.put(word, mWordCount.get(word) + number);
		} else {
			mWordCount.put(word, number);
		}
	}

}
